<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:background="@color/mediumAshblue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
            android:id="@+id/search_imgv_logo"
            android:src="@drawable/img_logo_bookseeker_la"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/search_txtv_title"
            app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
            android:id="@+id/search_txtv_title"
            android:text="BOOK SEEKER"
            android:textSize="24dp"
            android:textColor="@color/mediumLime"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            app:layout_constraintTop_toBottomOf="@id/search_imgv_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/search_cardv_search"/>
    <androidx.cardview.widget.CardView
            android:id="@+id/search_cardv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"

            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@color/basicWhite"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@id/search_btmnavview_menu">
        <EditText
                android:id="@+id/search_etxt_search"
                android:hint="Type some text..."
                android:padding="10dp"
                android:drawablePadding="22dp"
                android:drawableLeft="@android:drawable/ic_menu_camera"
                android:drawableRight="@android:drawable/ic_menu_search"
                android:textColorHint="@color/mediumAshblue"

                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/search_btmnavview_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"

            app:menu="@menu/bottom_nav_menu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>