<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:background="@color/lightnessAshblue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
            android:id="@+id/search_cardv_category"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="@dimen/activity_margin"

            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@color/basicWhite"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp">
                <ImageView
                        android:src="@drawable/icon_comic"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"/>
                <TextView
                        android:text="만화"
                        android:textSize="16sp"
                        android:textColor="@color/mediumAshblue"
                        android:textStyle="bold"
                        android:gravity="bottom|center_horizontal"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
            </LinearLayout>
            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:alpha="1"
                    android:background="@color/mediumAshblue"/>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                <ImageView
                        android:src="@drawable/icon_heart"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"/>
                <TextView
                        android:text="로맨스"
                        android:textSize="16sp"
                        android:textColor="@color/mediumAshblue"
                        android:textStyle="bold"
                        android:gravity="bottom|center_horizontal"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
            </LinearLayout>
            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:alpha="1"
                    android:background="@color/mediumAshblue"/>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                <ImageView
                        android:src="@drawable/icon_fantasy"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"/>
                <TextView
                        android:text="판타지"
                        android:textSize="16sp"
                        android:textColor="@color/mediumAshblue"
                        android:textStyle="bold"
                        android:gravity="bottom|center_horizontal"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:id="@+id/search_cardv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/activity_margin"

            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@color/basicWhite"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@id/search_cardv_category"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recommend_btmnavview_menu">
        <ImageView
                android:src="@drawable/img_logo_bookseeker_aw"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/recommend_btmnavview_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"

            app:menu="@menu/bottom_nav_menu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>