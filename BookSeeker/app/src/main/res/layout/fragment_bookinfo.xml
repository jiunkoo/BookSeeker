<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/bookinfo_imgv_book"
                android:padding="@dimen/activity_margin"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/img_novel1"
                android:background="@color/mediumAshblue"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        <TextView
                android:id="@+id/bookinfo_txtv_booktitle"
                android:text="BOOK TITLE"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/basicWhite"
                android:gravity="center"
                android:padding="@dimen/activity_margin"
                android:background="@color/mediumAshblue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/bookinfo_imgv_book"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        <View
                android:id="@+id/bookinfo_view_line1"
                android:background="@color/lightnessAshblue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_margin"

                app:layout_constraintTop_toBottomOf="@id/bookinfo_txtv_booktitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        <TextView
                android:id="@+id/bookinfo_txtv_averagestar"
                android:text="평균 ★ 0.0 (00명)"
                android:textColor="@color/mediumAshblue"
                android:textSize="16sp"
                android:layout_margin="@dimen/activity_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/bookinfo_view_line1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        <View
                android:id="@+id/bookinfo_view_line2"
                android:background="@color/lightnessAshblue"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                app:layout_constraintTop_toBottomOf="@id/bookinfo_txtv_averagestar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bookinfo_ratingbar_bookrating"/>
        <RatingBar
                android:id="@+id/bookinfo_ratingbar_bookrating"
                android:numStars="5"
                android:stepSize="0.5"
                android:layout_margin="@dimen/activity_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/bookinfo_view_line2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bookinfo_btn_boring"/>
        <Button
                android:id="@+id/bookinfo_btn_boring"
                android:text="관심\n없어요"
                android:textStyle="bold"
                android:textColor="@color/basicWhite"
                android:textSize="20sp"
                android:background="@color/mediumRed"
                android:padding="@dimen/activity_margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/bookinfo_ratingbar_bookrating"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/bookinfo_btn_interesting"
                app:layout_constraintBottom_toTopOf="@id/bookinfo_view_line3"/>
        <Button
                android:id="@+id/bookinfo_btn_interesting"
                android:text="관심\n있어요"
                android:textStyle="bold"
                android:textColor="@color/basicWhite"
                android:textSize="20sp"
                android:background="@color/mediumYellow"
                android:padding="@dimen/activity_margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="@id/bookinfo_btn_boring"
                app:layout_constraintLeft_toRightOf="@id/bookinfo_btn_boring"
                app:layout_constraintRight_toLeftOf="@id/bookinfo_btn_reading"
                app:layout_constraintBottom_toBottomOf="@id/bookinfo_btn_boring"/>
        <Button
                android:id="@+id/bookinfo_btn_reading"
                android:text="읽고\n있어요"
                android:textStyle="bold"
                android:textColor="@color/basicWhite"
                android:textSize="20sp"
                android:background="@color/mediumLime"
                android:padding="@dimen/activity_margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="@id/bookinfo_btn_boring"
                app:layout_constraintLeft_toRightOf="@id/bookinfo_btn_interesting"
                app:layout_constraintRight_toLeftOf="@id/bookinfo_btn_read"
                app:layout_constraintBottom_toBottomOf="@id/bookinfo_btn_boring"/>
        <Button
                android:id="@+id/bookinfo_btn_read"
                android:text="완독\n했어요"
                android:textStyle="bold"
                android:textColor="@color/basicWhite"
                android:textSize="20sp"
                android:background="@color/mediumMint"
                android:padding="@dimen/activity_margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="@id/bookinfo_btn_boring"
                app:layout_constraintLeft_toRightOf="@id/bookinfo_btn_reading"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/bookinfo_btn_boring"/>
        <View
                android:id="@+id/bookinfo_view_line3"
                android:background="@color/lightnessAshblue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_margin"

                app:layout_constraintTop_toBottomOf="@id/bookinfo_btn_boring"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bookinfo_txtv_ridibooks_label"/>
        <TextView
                android:id="@+id/bookinfo_txtv_ridibooks_label"
                android:text="리디북스"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/mediumAshblue"
                android:drawableLeft="@drawable/icon_ridibooks"
                android:drawableTint="@color/ridibooks"
                android:drawablePadding="@dimen/activity_margin"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toTopOf="@id/bookinfo_btn_link"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/bookinfo_btn_link"
                app:layout_constraintBottom_toBottomOf="@id/bookinfo_btn_link"/>
        <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/bookinfo_btn_link"
                android:text="구매하기"
                android:textColor="@color/basicBlack"
                android:textSize="16sp"
                android:layout_margin="@dimen/activity_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:cornerRadius="8dp"
                app:rippleColor="#33AAAAAA"
                app:strokeColor="@color/lightAshblue"
                app:strokeWidth="2dp"
                app:backgroundTint="@color/transparent"
                app:layout_constraintTop_toBottomOf="@id/bookinfo_view_line3"
                app:layout_constraintLeft_toRightOf="@id/bookinfo_txtv_ridibooks_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bookinfo_view_line4"/>
        <View
                android:id="@+id/bookinfo_view_line4"
                android:background="@color/lightnessAshblue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_margin"

                app:layout_constraintTop_toBottomOf="@id/bookinfo_btn_link"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bookinfo_txtv_author_label"/>
        <TextView
                android:id="@+id/bookinfo_txtv_author_label"
                android:text="저자"
                android:textSize="18sp"
                android:textColor="@color/mediumAshblue"
                android:gravity="center"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toBottomOf="@id/bookinfo_view_line4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/bookinfo_txtv_author"
                app:layout_constraintBottom_toTopOf="@id/bookinfo_txtv_publisher_label"/>
        <TextView
                android:id="@+id/bookinfo_txtv_author"
                android:text="AUTHOR"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/mediumAshblue"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintHorizontal_weight="8"
                app:layout_constraintTop_toBottomOf="@id/bookinfo_view_line4"
                app:layout_constraintLeft_toRightOf="@id/bookinfo_txtv_author_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bookinfo_txtv_publisher"/>
        <TextView
                android:id="@+id/bookinfo_txtv_publisher_label"
                android:text="출판사"
                android:textSize="18sp"
                android:textColor="@color/mediumAshblue"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/bookinfo_txtv_author_label"
                app:layout_constraintLeft_toLeftOf="@id/bookinfo_txtv_author_label"
                app:layout_constraintRight_toRightOf="@id/bookinfo_txtv_author_label"
                app:layout_constraintBottom_toTopOf="@id/bookinfo_txtv_date_label"/>
        <TextView
                android:id="@+id/bookinfo_txtv_publisher"
                android:text="PUBLISHER"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/mediumAshblue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/bookinfo_txtv_author"
                app:layout_constraintLeft_toLeftOf="@id/bookinfo_txtv_author"
                app:layout_constraintRight_toRightOf="@id/bookinfo_txtv_author"
                app:layout_constraintBottom_toTopOf="@id/bookinfo_txtv_date"/>
        <TextView
                android:id="@+id/bookinfo_txtv_date_label"
                android:text="출판일"
                android:textSize="18sp"
                android:textColor="@color/mediumAshblue"
                android:gravity="center"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/bookinfo_txtv_publisher_label"
                app:layout_constraintLeft_toLeftOf="@id/bookinfo_txtv_author_label"
                app:layout_constraintRight_toRightOf="@id/bookinfo_txtv_author_label"
                app:layout_constraintBottom_toTopOf="@id/bookinfo_view_line5"/>
        <TextView
                android:id="@+id/bookinfo_txtv_date"
                android:text="YYYY.MM.DD"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/mediumAshblue"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/bookinfo_txtv_publisher"
                app:layout_constraintLeft_toLeftOf="@id/bookinfo_txtv_author"
                app:layout_constraintRight_toRightOf="@id/bookinfo_txtv_author"
                app:layout_constraintBottom_toTopOf="@id/bookinfo_view_line5"/>
        <View
                android:id="@+id/bookinfo_view_line5"
                android:background="@color/lightnessAshblue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_margin"

                app:layout_constraintTop_toBottomOf="@id/bookinfo_txtv_date_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bookinfo_txtv_introduction_label"/>
        <TextView
                android:id="@+id/bookinfo_txtv_introduction_label"
                android:text="도서 소개"
                android:textStyle="bold"
                android:textColor="@color/mediumAshblue"
                android:textSize="20sp"
                android:layout_margin="@dimen/activity_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bookinfo_view_line5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bookinfo_txtv_introduction"/>
        <TextView
                android:id="@+id/bookinfo_txtv_introduction"
                android:text="INTRODUCTION"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/bookinfo_txtv_introduction_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>