<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:background="@color/mediumAshblue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
            android:id="@+id/search_imgv_logo"
            android:src="@drawable/img_logo_bookseeker_la"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/search_txtv_title"
            app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
            android:id="@+id/search_txtv_title"
            android:text="BOOK SEEKER"
            android:textSize="36dp"
            android:textColor="@color/mediumLime"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            app:layout_constraintTop_toBottomOf="@id/search_imgv_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>