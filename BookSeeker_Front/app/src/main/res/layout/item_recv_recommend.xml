<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:background="@color/basicWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"

        app:cardCornerRadius="8dp"
        app:cardElevation="1dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/mediumAshblue"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/recv_recommend_item_imgv_image"
                android:src="@drawable/img_novel1"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.cardview.widget.CardView
                android:id="@+id/recv_recommend_item_cardview"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="@id/recv_recommend_item_imgv_image"
                app:layout_constraintRight_toRightOf="parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="예상"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/mediumRed"
                        android:background="@color/basicWhite"
                        android:padding="@dimen/activity_half_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                <TextView
                        android:id="@+id/recv_recommend_item_txtv_rating"
                        android:text=" 0.0 "
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/basicWhite"
                        android:background="@color/mediumRed"
                        android:padding="@dimen/activity_half_margin"
                        android:layout_weight="4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
                android:id="@+id/recv_recommend_item_layout_linear"
                android:orientation="vertical"
                android:padding="@dimen/activity_margin"
                android:background="@color/mediumAshblue"
                android:alpha="0.85"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_chainStyle="packed">
            <TextView
                    android:id="@+id/recv_recommend_item_txtv_title"
                    android:text="BOOK TITLE"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/basicWhite"
                    android:gravity="left"
                    android:layout_marginBottom="@dimen/activity_half_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/recv_recommend_item_txtv_author"
                    android:text="AUTHOR"
                    android:textSize="16sp"
                    android:textColor="@color/basicWhite"
                    android:gravity="left"
                    android:layout_marginBottom="@dimen/activity_half_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/recv_recommend_item_txtv_publisher"
                    android:text="PUBLISHER"
                    android:textSize="16sp"
                    android:textColor="@color/basicWhite"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageButton
                android:id="@+id/recv_recommend_item_ibtn_boring"
                android:src="@drawable/icon_boring"
                android:tint="@color/basicWhite"
                android:background="@color/transparent"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_half_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="@id/recv_recommend_item_layout_linear"
                app:layout_constraintRight_toLeftOf="@id/recv_recommend_item_ibtn_interesting"/>
        <ImageButton
                android:id="@+id/recv_recommend_item_ibtn_interesting"
                android:src="@drawable/icon_interesting_border"
                android:tint="@color/basicWhite"
                android:background="@color/transparent"
                android:layout_margin="@dimen/activity_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="@id/recv_recommend_item_layout_linear"
                app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>