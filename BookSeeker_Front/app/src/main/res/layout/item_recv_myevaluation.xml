<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="300dp"

        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/recv_myevaluation_item_imgv_book"
                android:scaleType="fitXY"
                android:src="@drawable/img_basic"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <View
                android:alpha="0.85"
                android:background="@color/mediumAshblue"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                app:layout_constraintTop_toTopOf="@id/recv_myevaluation_item_txtv_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:id="@+id/recv_myevaluation_item_txtv_title"
                android:text="TITLE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/basicWhite"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingTop="@dimen/activity_half_margin"
                android:paddingLeft="@dimen/activity_half_margin"
                android:paddingRight="@dimen/activity_half_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/recv_myevaluation_item_txtv_rating"/>
        <TextView
                android:id="@+id/recv_myevaluation_item_txtv_rating"
                android:text="â˜… 0.0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/mediumYellow"
                android:padding="@dimen/activity_half_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>