<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:background="@color/mediumAshblue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:id="@+id/register_txtv_email"
            android:text="이메일"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/mediumLime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/register_etxt_email"
            app:layout_constraintStart_toStartOf="@id/register_etxt_password"
            app:layout_constraintVertical_chainStyle="packed"/>
    <EditText
            android:id="@+id/register_etxt_email"
            android:ems="10"
            android:textColor="@color/lightAshblue"
            android:inputType="textEmailAddress"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/register_txtv_email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/register_txtv_nickname"/>
    <TextView
            android:id="@+id/register_txtv_nickname"
            android:text="별명"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/mediumLime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/register_etxt_email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/register_etxt_nickname"
            app:layout_constraintStart_toStartOf="@id/register_etxt_email"/>
    <EditText
            android:id="@+id/register_etxt_nickname"
            android:ems="10"
            android:textColor="@color/lightAshblue"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/register_txtv_nickname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/register_txtv_password"/>
    <TextView
            android:id="@+id/register_txtv_password"
            android:text="비밀번호"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/mediumLime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/register_etxt_nickname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/register_etxt_password"
            app:layout_constraintStart_toStartOf="@id/register_etxt_password"/>
    <EditText
            android:id="@+id/register_etxt_password"
            android:ems="10"
            android:textColor="@color/lightAshblue"
            android:inputType="textPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/register_txtv_password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/register_txtv_passwordconfirm"/>
    <TextView
            android:id="@+id/register_txtv_passwordconfirm"
            android:text="비밀번호 확인"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/mediumLime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/register_etxt_password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/register_etxt_passwordconfirm"
            app:layout_constraintStart_toStartOf="@id/register_etxt_passwordconfirm"/>
    <EditText
            android:id="@+id/register_etxt_passwordconfirm"
            android:ems="10"
            android:textColor="@color/lightAshblue"
            android:inputType="textPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/register_txtv_passwordconfirm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/register_btn_register"/>
    <Button
            android:id="@+id/register_btn_register"
            android:text="회원가입"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/mediumAshblue"
            android:background="@color/lightLime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:enabled="false"

            app:layout_constraintTop_toBottomOf="@id/register_etxt_passwordconfirm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/signup_txtv_already"
            app:layout_constraintStart_toStartOf="@id/register_etxt_passwordconfirm"
            app:layout_constraintEnd_toEndOf="@id/register_etxt_passwordconfirm"/>
    <TextView
            android:id="@+id/signup_txtv_already"
            android:text="이미 계정이 있으신가요? "
            android:textSize="18sp"
            android:textColor="@color/lightAshblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/register_btn_register"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/signup_txtv_signin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>
    <TextView
            android:id="@+id/signup_txtv_signin"
            android:text="로그인"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/mediumLime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/register_btn_register"
            app:layout_constraintLeft_toRightOf="@id/signup_txtv_already"
            app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>