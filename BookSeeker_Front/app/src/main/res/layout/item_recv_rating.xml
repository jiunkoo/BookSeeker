<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="140dp">
    <ImageView
            android:id="@+id/recv_rating_item_imgv_book"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/img_novel1"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/recv_rating_item_txtv_booktitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight="2"/>
    <!--<View-->
    <!--android:id="@+id/rating_item_borderline"-->
    <!--android:background="@color/darkAshblue"-->
    <!--android:layout_marginLeft="8dp"-->
    <!--android:layout_width="10dp"-->
    <!--android:layout_height="0dp"-->

    <!--app:layout_constraintTop_toTopOf="parent"-->
    <!--app:layout_constraintLeft_toRightOf="@id/rating_item_imgv_book"-->
    <!--app:layout_constraintRight_toLeftOf="@id/rating_item_txtv_booktitle"-->
    <!--app:layout_constraintBottom_toBottomOf="parent"-->
    <!--app:layout_constraintHorizontal_chainStyle="packed"/>-->
    <TextView
            android:id="@+id/recv_rating_item_txtv_booktitle"
            android:text="BOOK TITLE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/darkAshblue"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/recv_rating_item_imgv_book"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recv_rating_item_txtv_author"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_weight="8"
            app:layout_constraintVertical_weight="1"/>
    <TextView
            android:id="@+id/recv_rating_item_txtv_author"
            android:text="AUTHOR"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/recv_rating_item_txtv_booktitle"
            app:layout_constraintLeft_toRightOf="@id/recv_rating_item_imgv_book"
            app:layout_constraintBottom_toTopOf="@id/recv_rating_item_txtv_publisher"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_weight="4"/>
    <TextView
            android:id="@+id/recv_rating_item_txtv_publisher"
            android:text="PUBLISHER"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/recv_rating_item_txtv_author"
            app:layout_constraintLeft_toRightOf="@id/recv_rating_item_imgv_book"
            app:layout_constraintBottom_toTopOf="@id/recv_rating_item_ratingbar_bookrating"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_weight="4"/>
    <RatingBar
            android:id="@+id/recv_rating_item_ratingbar_bookrating"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="false"
            android:theme="@style/RatingBar"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            style="@style/Widget.AppCompat.RatingBar.Indicator"

            app:layout_constraintTop_toBottomOf="@id/recv_rating_item_txtv_publisher"
            app:layout_constraintLeft_toRightOf="@id/recv_rating_item_imgv_book"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_weight="8"/>
</androidx.constraintlayout.widget.ConstraintLayout>