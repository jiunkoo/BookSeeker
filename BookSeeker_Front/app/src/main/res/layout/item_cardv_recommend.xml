        <ImageView
                android:id="@+id/cardv_recommend_item_imgv_image"
                android:src="@drawable/img_basic"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.cardview.widget.CardView
                android:id="@+id/cardv_recommend_item_cardview_star"
                android:visibility="invisible"
                android:layout_margin="@dimen/activity_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:cardCornerRadius="30dp"
                app:cardElevation="30dp"
                app:layout_constraintTop_toTopOf="@id/cardv_recommend_item_imgv_image"
                app:layout_constraintRight_toRightOf="@id/cardv_recommend_item_imgv_image">
            <ImageView
                    android:id="@+id/cardv_recommend_item_imgv_star"
                    android:src="@drawable/icon_star"
                    android:tint="@color/mediumAshblue"
                    android:visibility="invisible"
                    android:layout_margin="@dimen/activity_half_margin"
                    android:layout_width="36dp"
                    android:layout_height="36dp"

                    app:layout_constraintTop_toTopOf="@id/cardv_recommend_item_imgv_image"
                    app:layout_constraintRight_toRightOf="@id/cardv_recommend_item_imgv_image"/>
