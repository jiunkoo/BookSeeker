                android:background="@color/mediumAshblue"
                android:alpha="0.8"
                android:padding="@dimen/activity_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintLeft_toLeftOf="parent"
